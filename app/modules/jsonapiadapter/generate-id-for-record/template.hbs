<table class="table text-center">
	<thead class="thead-light">
		<th>Id</th>
		<th>Name</th>
		<th>Location</th>
		<th>Employee</th>
		<th>Add Record</th>
	</thead>
	<tbody>
		{{#each model as |comp index|}}
			<tr>
				<td>{{comp.id}}</td>
				<td>{{comp.name}}</td>
				<td>{{comp.location}}</td>
				<td>{{comp.employee}}</td>
				<td> <button type="button" class="btn btn-primary" {{action "addRecord" index}}>Add</button> </td>
			</tr>
		{{/each}}
	</tbody>
</table>