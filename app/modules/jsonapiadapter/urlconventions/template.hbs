<table class="table text-center">
	<thead class="thead-light">
		<th>id</th>
		<th>title</th>
		<th>body</th>
		<th>commentator 1</th>
		<th>commentator 2</th>
	</thead>
	<tbody>
		{{#each model.post as |post|}}
			<tr>
				<td>{{post.id}}</td>
				<td>{{post.title}}</td>
				<td>{{post.content}}</td>
				{{#each post.comments as |comment|}}
					<td>{{comment.commentator}}</td>
				{{/each}}
			</tr>
		{{/each}}
	</tbody>
</table>
<table class="table mt-3">
	<thead class="thead-dark">
		<th>id</th>
		<th>name</th>
		<th>rank</th>
	</thead>
	<tbody>
		{{#each model.campus as |campus|}}
			<tr>
				<td>{{campus.id}}</td>
				<td>{{campus.name}}</td>
				<td>{{campus.rank}}</td>
			</tr>
		{{/each}}
	</tbody>
</table>