<table class="table text-center">
	<thead class="thead-light">
		<th>Id</th>
		<th>Name</th>
		<th>Location</th>
		<th>Employee</th>
		<th>Add Record</th>
		<th>Update Record</th>
		<th>Delete Record</th>
	</thead>
	<tbody>
		{{#each model.company as |comp index|}}
			<tr>
				<td>{{comp.id}}</td>
				<td>{{comp.name}}</td>
				<td>{{comp.location}}</td>
				<td>{{comp.employee}}</td>
				<td> <button type="button" class="btn btn-primary" {{action "addRecord" index}}>Add</button> </td>
				<td> <button type="button" class="btn btn-info" {{action "updateRecord" comp.id}}>Update</button> </td>
				<td> <button type="button" class="btn btn-danger" {{action "deleteRecord" comp.id}}>Delete</button> </td>
			</tr>
		{{/each}}
	</tbody>
</table>